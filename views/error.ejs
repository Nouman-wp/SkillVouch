<%- include('./partials/header') %>

<div class="error-container text-center my-5">
  <h1 class="display-4 fw-bold">Oops! <%= statusCode || 404 %> Error</h1>
  <p class="lead my-4"><%= message || "The page you're looking for does not exist or an unexpected error occurred." %></p>

  <div class="error-actions mt-4">
    <a href="/" class="btn btn-primary px-4 py-2 me-3">Go Home</a>
    <a href="javascript:history.back()" class="btn btn-outline-secondary px-4 py-2">Go Back</a>
  </div>
</div>

<%- include('./partials/footer') %>

<!-- âœ… Styling -->
<style>
  .error-container {
    width: 80%;
    margin: 0 auto;
    padding: 50px 20px;
    background-color: #f8f9fa;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .error-container h1 {
    color: #dc3545;
  }

  .error-actions .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .error-actions .btn-primary:hover {
    background-color: #0056b3;
  }

  .error-actions .btn-outline-secondary:hover {
    background-color: #6c757d;
    color: #fff;
  }

  @media (max-width: 768px) {
    .error-container {
      width: 95%;
    }

    .error-container h1 {
      font-size: 2.5rem;
    }

    .error-actions .btn {
      width: 100%;
      margin-bottom: 10px;
    }
  }
</style>
