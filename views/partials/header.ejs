<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SkillVouch</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .account-dropdown {
      position: relative;
      cursor: pointer;
    }

    .account-dropdown .dropdown-content {
      display: none;
      position: absolute;
      background-color: #ffffff;
      min-width: 200px;
      right: 0;
      top: 50px;
      z-index: 999;
      border-radius: 8px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      overflow: hidden;
    }

    .account-dropdown .dropdown-content li {
      list-style: none;
      border-bottom: 1px solid #ddd;
    }

    .account-dropdown .dropdown-content li a {
      color: #333;
      text-decoration: none;
      display: block;
      padding: 10px 15px;
      transition: 0.3s;
    }

    .account-dropdown .dropdown-content li a:hover {
      background-color: #f39c12;
      color: #fff;
    }

    .account-dropdown.active .dropdown-content {
      display: block;
    }

    .profile-img {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 8px;
      vertical-align: middle;
    }

    .account-toggle {
      display: flex;
      align-items: center;
      color: #fff;
      cursor: pointer;
      padding: 8px;
      border-radius: 5px;
    }

    .account-toggle:hover {
      background-color: rgba(255, 255, 255, 0.2);
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">SkillVouch</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/gigs">Gigs</a></li>

          <li class="nav-item account-dropdown">
            <div class="account-toggle">
              <img src="<%= currentUser && currentUser.profileImage ? currentUser.profileImage : '/images/default.png' %>" alt="Profile" class="profile-img">
              <span>Account</span>
            </div>
            <ul class="dropdown-content">
              <% if (!currentUser) { %>
                <li><a href="/auth/register">Register</a></li>
                <li><a href="/auth/login">Login</a></li>
              <% } else { %>
                <li><a href="/users/profile">Profile</a></li>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/gigs/applied">Applied Gigs</a></li>
                <li><a href="/auth/logout">Logout</a></li>
              <% } %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <%- include('flash') %>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const dropdown = document.querySelector('.account-dropdown');
      const toggleBtn = dropdown.querySelector('.account-toggle');

      toggleBtn.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent immediate close
        dropdown.classList.toggle('active');
      });

      // Close dropdown on clicking outside
      document.addEventListener('click', (e) => {
        if (!dropdown.contains(e.target)) {
          dropdown.classList.remove('active');
        }
      });
    });
  </script>

</body>

</html>
