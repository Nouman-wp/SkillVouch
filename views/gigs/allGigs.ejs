<%- include('../partials/header') %>

<style>
  body {
    background-color: #f8f9fa;
    font-family: 'Poppins', sans-serif;
  }
  
  .page-header {
    padding: 3rem 0 2rem;
    background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    color: white;
    border-radius: 0 0 30px 30px;
    margin-bottom: 2.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    margin-top: -16px;
  }
  
  .gig-card {
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border-radius: 18px;
    overflow: hidden;
    background-color: #fff;
    border: none;
    height: 100%;
    position: relative;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
  }
  
  .gig-card:hover {
    transform: translateY(-8px) scale(1.01);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    z-index: 1;
  }
  
  .creator-img {
    width: 75px;
    height: 75px;
    border-radius: 50%;
    background-color: #fff;
    object-fit: contain;
    border: 4px solid #007bff;
    box-shadow: 0 5px 10px rgba(0, 123, 255, 0.2);
    padding: 5px;
    cursor: pointer;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }
  
  .creator-img:hover {
    transform: scale(1.05);
    border-color: #0056b3;
  }
  
  .gig-price {
    font-size: 1.5rem;
    color: #28a745;
    font-weight: 700;
    display: inline-block;
    padding: 0.3rem 1rem;
    background-color: rgba(40, 167, 69, 0.1);
    border-radius: 50px;
    margin: 0.5rem 0;
  }
  
  .poster-info {
    display: flex;
    align-items: center;
    gap: 15px;
    position: relative;
    padding: 0.5rem 0;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .poster-name {
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
  }
  
  .poster-name:hover {
    color: #007bff;
  }
  
  /* Profile popup */
  .profile-popup {
    position: absolute;
    top: 120%;
    left: 0;
    background: linear-gradient(135deg, #007bff, #0056b3);
    color: #fff;
    padding: 10px 15px;
    border-radius: 10px;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.3s ease;
    z-index: 10;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transform: translateY(10px);
  }
  
  .poster-info:hover .profile-popup,
  .poster-name:hover .profile-popup {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }
  
  .profile-popup a {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 5px;
  }
  
  .profile-popup a:hover {
    text-decoration: underline;
  }
  
  .gig-title {
    font-size: 1.4rem;
    font-weight: 700;
    line-height: 1.3;
    color: #333;
    margin-bottom: 0.8rem;
    transition: color 0.3s ease;
  }
  
  .gig-card:hover .gig-title {
    color: #007bff;
  }
  
  .gig-description {
    color: #666;
    line-height: 1.6;
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  
  .btn-view-details {
    background: linear-gradient(135deg, #007bff, #0056b3);
    border: none;
    padding: 0.8rem 1.5rem;
    font-weight: 600;
    border-radius: 50px;
    box-shadow: 0 5px 15px rgba(0, 123, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .btn-view-details:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 123, 255, 0.3);
    background: linear-gradient(135deg, #0056b3, #003580);
  }
  
  .btn-post-gig {
    font-size: 1.2rem;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    background: linear-gradient(135deg, #28a745, #218838);
    border: none;
    font-weight: 600;
    box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
    transition: all 0.3s ease;
  }
  
  .btn-post-gig:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 25px rgba(40, 167, 69, 0.4);
    background: linear-gradient(135deg, #218838, #1e7e34);
  }
  
  .empty-state {
    background-color: white;
    border-radius: 20px;
    padding: 3rem;
    text-align: center;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
  }
  
  .empty-state-icon {
    font-size: 4rem;
    color: #007bff;
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }
  
  .card-inner {
    padding: 1.5rem;
  }
  
  .gig-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }
  
  .card-footer {
    background-color: rgba(0, 0, 0, 0.02);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    padding: 1rem 1.5rem;
    border-radius: 0 0 18px 18px;
  }
</style>

<div class="page-header">
  <div class="container">
    <h1 class="text-center fw-bold mb-2">Explore Available Gigs</h1>
    <p class="text-center text-white-50 lead">Find the perfect freelance services for your needs</p>
  </div>
</div>

<div class="container">
  <% if (gigs.length === 0) { %>
    <div class="empty-state my-5">
      <div class="empty-state-icon">ðŸ“‹</div>
      <h3 class="fw-bold mb-3">No gigs posted yet</h3>
      <p class="text-muted mb-4">Be the first to post a gig and start offering your services!</p>
      
      <% if (currentUser) { %>
        <a href="/gigs/new" class="btn btn-primary btn-lg px-5">Create Your First Gig</a>
      <% } else { %>
        <a href="/login" class="btn btn-primary btn-lg px-5">Sign In to Post</a>
      <% } %>
    </div>
  <% } else { %>
    <div class="row g-4">
      <% gigs.forEach(gig => { %>
        <div class="col-md-6 col-lg-4">
          <div class="gig-card d-flex flex-column">
            <div class="card-inner flex-grow-1 d-flex flex-column">
              <div class="poster-info">
                <img 
                  src="<%= gig.postedBy.profileImage || '/images/default-user.png' %>" 
                  alt="Poster Image" 
                  class="creator-img" 
                  onclick="window.location.href='/users/profile/<%= gig.postedBy._id %>'"
                >
                <div class="poster-name" onclick="window.location.href='/users/profile/<%= gig.postedBy._id %>'">
                  <h6 class="mb-0 fw-semibold"><%= gig.postedBy.username %></h6>
                  <small class="text-muted">Posted a gig</small>
                  
                  <!-- Profile Popup -->
                  <div class="profile-popup">
                    <a href="/users/profile/<%= gig.postedBy._id %>">ðŸ‘¤ View Profile</a>
                  </div>
                </div>
              </div>
              
              <h3 class="gig-title"><%= gig.title %></h3>
              <p class="gig-description"><%= gig.description.substring(0, 120) %>...</p>
              
              <div class="gig-meta mt-auto">
                <p class="gig-price mb-0">â‚¹ <%= gig.price %></p>
              </div>
            </div>
            
            <div class="card-footer">
              <a href="/gigs/<%= gig._id %>" class="btn btn-primary btn-view-details w-100">
                <i class="fas fa-eye me-2"></i> View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    
    <div class="d-flex justify-content-center mt-5">
      <nav aria-label="Gig navigation">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item active"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  <% } %>
  
  <% if (currentUser) { %>
    <div class="text-center my-5">
      <a href="/gigs/new" class="btn btn-success btn-post-gig">
        <i class="fas fa-plus-circle me-2"></i> Post a New Gig
      </a>
    </div>
  <% } %>
</div>

