<%- include('partials/header') %>
<%- include('partials/flash') %>

<section class="hero bg-light text-center py-5">
  <div class="container">
    <h1 class="display-4 fw-bold">Welcome to SkillVouch</h1>
    <p class="lead mt-3">Find paid gigs, showcase your skills, and connect with startups and peers.</p>
    <% if (!currentUser) { %>
      <a href="/auth/register" class="btn btn-success mt-4 px-4 py-2">Get Started</a>
      <a href="/auth/login" class="btn btn-outline-dark mt-4 px-4 py-2">Login</a>
    <% } else { %>
      <a href="/gigs" class="btn btn-primary mt-4 px-4 py-2">Explore Gigs</a>
    <% } %>
  </div>
</section>

<section class="features py-5 bg-white text-center">
  <div class="container">
    <h2 class="mb-4">Why SkillVouch?</h2>
    <div class="row">
      <div class="col-md-4">
        <i class="bi bi-briefcase-fill fs-1 text-primary"></i>
        <h5 class="mt-3">Find Freelance Gigs</h5>
        <p>Get paid for your skills. Connect with startups or peers seeking talent.</p>
      </div>
      <div class="col-md-4">
        <i class="bi bi-person-check-fill fs-1 text-success"></i>
        <h5 class="mt-3">Verified Profiles</h5>
        <p>Showcase your projects, GitHub, LinkedIn, and earn trust in the community.</p>
      </div>
      <div class="col-md-4">
        <i class="bi bi-chat-dots-fill fs-1 text-warning"></i>
        <h5 class="mt-3">Collaborate & Grow</h5>
        <p>Build your network, learn, and grow together while earning side income.</p>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
