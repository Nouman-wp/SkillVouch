<%- include('../partials/header') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Your Dashboard</h2>
        <a href="/gigs/create" class="btn btn-success px-4 py-2">+ Post New Gig</a>
    </div>

    <% if (userGigs.length > 0) { %>
        <div class="row g-4">
            <% userGigs.forEach(gig => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                        <img src="<%= gig.image %>" class="card-img-top" alt="<%= gig.title %>" style="height: 200px; object-fit: cover; border-top-left-radius: 0.5rem; border-top-right-radius: 0.5rem;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-semibold"><%= gig.title %></h5>
                            <p class="card-text text-muted"><%= gig.description.substring(0, 100) %>...</p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="/gigs/<%= gig._id %>" class="btn btn-outline-primary btn-sm">View</a>
                                <a href="/gigs/edit/<%= gig._id %>" class="btn btn-outline-warning btn-sm">Edit</a>
                                <a href="/gigs/delete/<%= gig._id %>" class="btn btn-outline-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info p-4 text-center">
            <h5>You have no gigs posted yet.</h5>
            <p>Start by posting your first gig and attract potential clients!</p>
            <a href="/gigs/create" class="btn btn-primary mt-3">Post Your First Gig</a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
